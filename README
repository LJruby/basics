-def load_comics( path )
comics = {}
File.foreach(path) do |line|
name, url=line.split(': ')
comics[name]=url.strip
end
comics
end


trigger creating before an alteration of the object state:
before_create :record_signup, if: :condition?
def record_signup
  self.date==Date.today
end
def condition?
  self.some_field=some_value
end

trigger validating before an alteration of the object state:
validates :username, presence: true
validates :role, inclusion: {in: %(regular admin)}

set up a root route for index:
resources :module_name
root :to => 'module_name#index'
